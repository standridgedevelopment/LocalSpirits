@model LocalSpirits.Models.Event.EventEdit

@{
    ViewBag.Title = "CreateOne";
}

<h2>New Event</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel panel-warning" style="border-width: 0.25rem;">
        <div class="panel-body">
            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.BusinessID)
                @Html.HiddenFor(model => model.ID)
                @Html.HiddenFor(model => model.City)

                <div class="form-group">
                    <div class="col-xs-2 col-sm-6 col-md-2">
                        @Html.LabelFor(model => model.TypeOfEvent, htmlAttributes: new { @class = "control-label" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EnumDropDownListFor(model => model.TypeOfEvent, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TypeOfEvent, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-2 col-sm-2 col-md-1 ">
                        @Html.LabelFor(model => model.StartMonth, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-1">
                        @Html.LabelFor(model => model.StartDay, htmlAttributes: new { @class = "control-label" })
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2">
                        @Html.LabelFor(model => model.StartYear, htmlAttributes: new { @class = "control-label" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-2 col-sm-2 col-md-1 ">
                        @Html.EditorFor(model => model.StartMonth, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StartMonth, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-1">
                        @Html.EditorFor(model => model.StartDay, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StartDay, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-xs-2 col-sm-2 col-md-2">
                        @Html.EditorFor(model => model.StartYear, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StartYear, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-2 col-sm-2 col-md-3 ">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-6 col-sm-5 col-md-5">
                        @Html.TextAreaFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-2 col-sm-2 col-md-3 ">
                        @Html.LabelFor(model => model.ThirdPartyWebsite, htmlAttributes: new { @class = "control-label" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-xs-6 col-sm-2 col-md-2">
                        @Html.EditorFor(model => model.ThirdPartyWebsite, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ThirdPartyWebsite, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Update" class="btn btn-warning btn-large" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back", $"Details/{Model.BusinessID}", "Business", null, new { @class = "btn btn-warning btn-large" })

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
