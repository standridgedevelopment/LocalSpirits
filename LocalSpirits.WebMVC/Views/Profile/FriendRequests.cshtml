@model IEnumerable<LocalSpirits.Models.Friends.FriendRequestListItem>

@if(Model.Count() != 0)
{
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TimeSent)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeSent)
            </td>
            <td>
                @Html.ActionLink("Accept", "AcceptFriendRequest", new { id = item.ProfileID }) |
                @Html.ActionLink("Decline", "Delete", new { id = item.ProfileID })
            </td>
        </tr>
    }

</table>
}
@if (Model.Count() == 0)
{
    <p>No Friend Requests</p>
}


