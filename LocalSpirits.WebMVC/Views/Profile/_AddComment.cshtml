    $(document).ready(function () {
        $("i[data-toggle='hide']")

            .css({ "cursor": "pointer" })
            .click(function (e) {
                var target = $(e.target);
                var commentId = target.attr("data-id");
                $("#comment_" + commentId).hide('');
            });
    });
</script>


