@model IEnumerable<LocalSpirits.Models.Profile.ProfileDetail>

@{
    ViewBag.Title = "FriendsList";
}
<div class="container">
    <div class="row my-5">

        <div class="col-sm-6 col-md-6 my-6">
            <h2>Friends List</h2>

            @if (Model.Count() != 0)
            {
        <table class="table table-borderless">
            <tr>
            </tr>

            @foreach (var item in Model)
            {
                if (item.City != null)
                {
                    <tr>
                        <td>
                            @Html.ActionLink($"{item.FullName}", "Index", "Profile", new { id = item.Username }, null)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.State)
                        </td>
                        <td>
                            @Html.ActionLink("Remove", $"RemovieFriend/{item.Username}", "Friends", null, new { @class = "btn btn-primary btn-xs" })
                        </td>
                    </tr>
                }

            }

        </table>
            }
        </div>

        <div class="col-sm-6 col-md-6 my-6">
            <h2>Friend Requests</h2>
            @Html.Action("FriendRequests")
            
        </div>

    </div>
</div>




