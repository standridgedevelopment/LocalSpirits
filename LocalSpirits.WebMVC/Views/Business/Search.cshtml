@model IEnumerable<LocalSpirits.Models.Business.BusinessListItem>

@{
    ViewBag.Title = ViewBag.Title = $"{Model.ToList()[0].Name}";
}

<h2>Results</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeOfEstablishment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.City)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZipCode)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink($"{item.Name}", "Details", "Business", new { id = item.ID }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfEstablishment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.ActionLink($"{item.City}", "Details", "City",  new { id = item.ID }, null)
            </td>
            <td>
                @Html.ActionLink($"{item.ZipCode}", "ZipCode", "City", new { id = item.ZipCode }, null)
            </td>

        </tr>
    }

</table>